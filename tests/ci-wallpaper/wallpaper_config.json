{
  "target_pages": [
    {
      "url": "https://lexmakesit.com",
      "name": "Home Page",
      "wallpaper_selectors": [
        "body.homepage",
        "body",
        "[style*='waterfall']",
        "[class*='wallpaper']"
      ],
      "expected_wallpapers": [
        "https://lexmakesit.com/static/images/waterfall.gif",
        "https://lexmakesit.com/static/images/waterfall.png"
      ],
      "css_variables": [
        "--wallpaper-primary",
        "--wallpaper-fallback"
      ]
    }
  ],
  "asset_validation": {
    "min_file_size_bytes": 1024,
    "max_file_size_bytes": 10485760,
    "required_mime_types": ["image/gif", "image/png"],
    "timeout_seconds": 10
  },
  "cache_validation": {
    "min_cache_age_seconds": 300,
    "max_cache_age_seconds": 31536000,
    "required_headers": ["cache-control"],
    "preferred_headers": ["etag", "last-modified"]
  },
  "visual_regression": {
    "viewport_width": 1920,
    "viewport_height": 1080,
    "animation_frame_count": 3,
    "frame_delay_ms": 500,
    "comparison_threshold": 0.05
  },
  "ci_settings": {
    "continue_on_error": false,
    "verbose_output": false,
    "parallel_execution": true,
    "retry_attempts": 2
  }
}