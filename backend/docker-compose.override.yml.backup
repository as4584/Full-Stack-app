version: '3.8'

services:
  app:
    ports:
      - "8002:8002"
    environment:
      - ENVIRONMENT=development
    command: uvicorn ai_receptionist.app.main:app --host 0.0.0.0 --port 8002 --reload

  postgres:
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: ai
      POSTGRES_PASSWORD: ai

  redis:
    ports:
      - "6379:6379"

  qdrant:
    ports:
      - "6333:6333"
