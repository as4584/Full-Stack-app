# =================================================
# AI Receptionist Backend - Environment Variables
# =================================================
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini (optional - for AI conversations)
GOOGLE_API_KEY=your-google-api-key-here

# Environment
ENVIRONMENT=development  # or 'production'

# PostgreSQL Configuration
POSTGRES_USER=ai_receptionist_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ai_receptionist
DATABASE_URL=postgresql://ai_receptionist_user:your-secure-password-here@postgres:5432/ai_receptionist

# Twilio Configuration (for phone calls)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=168

# Google OAuth (for Calendar integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe (for payments - optional)
STRIPE_SECRET_KEY=sk_test_your-stripe-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redis (optional - for caching)
REDIS_URL=redis://redis:6379

# Qdrant (optional - for vector search)
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Encryption Key (for storing OAuth tokens)
ENCRYPTION_KEY=your-32-byte-encryption-key-here
